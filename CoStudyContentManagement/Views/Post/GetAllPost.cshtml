
@{
    ViewData["Title"] = "Danh sách bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row pl-3 ">
    <h3>Quản lý bài viết</h3>
</div>
<div class="w-100 form-row pb-3 ">
    <div class="col-2 mb-2"> <input id="txt_id" class=" form-control" placeholder="Mã bài viết" /> </div>
    <div class="col-2 mb-2"> <input id="txt_title" class=" form-control" placeholder="Tiêu đề" /> </div>
    <div class="col-2 mb-2"> <input id="txt_author_name" class="form-control" placeholder="Tác giả" /> </div>
    <div class="col-2 mb-2"> <input id="txt_date" type="date" class="form-control" placeholder="Ngày đăng" /> </div>

    <div class="col-2 mb-2"> <button id="btnSearch" class="form-control btn btn-info"> Tìm kiếm </button></div>
    <div class="col-2 mb-2"> <button id="btnClear" class="form-control btn btn-primary"> Refresh  </button></div>
</div>

<div class="row container-fluid">

    <table id="postTable" class="table table-responsive table-striped border" style="font-size: 15px; width: 100% !important">
        <thead>
        <tr>
            <th>STT</th>
            <th>Mã bài viết</th>
            <th>Tác giả</th>
            <th>Tiêu đề</th>
            <th>Ngày đăng bài</th>
            <th>Downvote</th>
            <th>Upvote</th>
            <th>Bình luận</th>
            <th>Trạng thái</th>
            <th>Hoạt động</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
        <tr>
            <th>&nbsp;</th>
            <th id="tfoot_id">Mã bài viết</th>
            <th id="tfoot_author">Tác giả</th>
            <th id="tfoot_header">Tiêu đề</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            
        </tr>
        </tfoot>
    </table>
</div>

<script src="~/js/GetAllPost.js"></script>