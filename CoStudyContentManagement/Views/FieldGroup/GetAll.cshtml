@using System.Runtime.InteropServices

@{
    ViewData["Title"] = "Nhóm lĩnh vực";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pl-2">
    <h3>Danh mục nhóm lĩnh vực </h3>
    <button class="btn btn-primary ml-3" style="cursor: pointer; background-color: #2A8383; border: none" id="btnAdd"><i class="fas fa-plus"></i> Thêm nhóm</button>
</div>

<div class="row container-fluid">
    <table id="fieldGroupTable"
           class="table table-responsive table-striped border"
           style="font-size: 15px; width: 100% !important">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã tham chiếu</th>
                <th>Tên nhóm</th>
                <th>Số lĩnh vực</th>
                <th>Trạng thái</th>
                <th>Hoạt động</th>

            </tr>
        </thead>
    </table>
</div>

@await Html.PartialAsync("FieldGroupPartial/DetailModal") 

<div class="modal fade" style="z-index: 1000000" id="saveConfirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body" >
                Bạn có xác nhận xóa đối tượng?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                <button type="button" id="btnSaveConfirm" onclick="saveInfo()" class="btn btn-primary" data-dismiss="modal">Xác nhận</button>
                <button type="button" id="btnAddConfirm" class="btn btn-primary" data-dismiss="modal">Thêm mới</button>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("Partial/EditToastPartial")
<script src="~/js/GetAllFieldGroup.js"></script>