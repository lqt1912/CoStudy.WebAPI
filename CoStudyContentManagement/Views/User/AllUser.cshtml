@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pl-3">
    <h3>Danh sách người dùng | </h3>
    <div class="col-3 mb-2 form-row ">
        <div class="col-3">
            <label class="col-form-label">
                Trạng thái
            </label>
        </div>
        <div class="col-9">
            <select id="slcStatus" class="form-control">
                <option value="0" id="slActive">Active</option>
                <option value="1" id="slOffline">Offline</option>
                <option value="2" id="slBlocked">Blocked</option>
                <option value="3" id="slAwait">Await</option>
                <option value="4" id="slDeleted">Deleted</option>
                <option value="5" id="slAll">Tất cả</option>
            </select>
        </div>
    </div>
</div>

<br />

<div class="w-100 form-row pb-3 ">
    <div class="col-2 mb-2"> <input id="txtName" class=" form-control" placeholder="Họ và tên" /> </div>
    <div class="col-2 mb-2"> <input id="txtAddress" class="form-control" placeholder="Địa chỉ" /> </div>
    <div class="col-2 mb-2"> <input id="txtEmail" class="form-control" placeholder="Email" /></div>
    <div class="col-2 mb-2">  <input id="txtPhoneNumber" class="form-control" placeholder="Số điện thoại" /></div>
    <div class="col-2 mb-2"> <button id="btnSearch" class="form-control btn btn-info"> Tìm kiếm </button></div>
    <div class="col-2 mb-2"> <button id="btnClear" class="form-control btn btn-primary"> Refresh  </button></div>
</div>

<div class="row container-fluid">
    <table id="userTable" class="table table-responsive table-striped border" style="font-size: 15px; width: 100% !important">
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
                <th>Ngày sinh</th>
                <th>Ngày đăng kí </th>
                <th>Status</th>
                <th>Hoạt động</th>
                <th class="d-none"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <th>&nbsp;</th>
                <th id="tfoot_name">Họ và tên</th>
                <th id="tfoot_email">Email</th>
                <th id="tfoot_phone">SĐT</th>
                <th id="tfoot_address">Địa chỉ</th>
                <th>&nbsp;</th>
                <th>&nbsp; </th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th class="d-none">&nbsp;</th>
            </tr>
        </tfoot>
    </table>

</div>
<style>
    .dataTables_wrapper {
        width: 100%
    }

    .custom-toast {
        width: 400px;
        color: black;
        font-weight: bold;
        background-color: #eb7183;
    }
</style>

<div id="toastDiv"></div>

@await Html.PartialAsync("ModalConfirmPartial")


<script src="~/js/GetAllUser.js"></script>