
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<h1> @ViewBag.id</h1>

<h2 id="url"> </h2>
<h2 id="path"></h2>
<h2 id="time_elapsed"></h2>
<script>
    const API_URL = 'https://localhost:44323/';
    $(document).ready(
        function () {
            getLoggingByDetail();
        }
    );

    function getLoggingByDetail() {

        $.ajax({
            type: 'GET',
            url: API_URL + 'api/Logging/' + '@ViewBag.id.ToString()',
            success: function (response) {
                console.log(url);
                $("#url").text(response.result.location);
                $("#path").text(response.result.requestPath);
                $("#time_elapsed").text(response.result.timeElapsed);
            },
            error: function (response) {
                console.log(response);
                console.log(url);
            }
        }
        );
    }
</script>



