
@{
    ViewData["Title"] = "Danh sách cấp độ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pl-2 ">
    <h3>Danh mục cấp độ </h3>
    <button class="btn btn-primary ml-3" style="cursor: pointer; background-color: #2A8383; border: none" id="btnAdd"><i class="fas fa-plus"></i> Thêm cấp độ</button>
</div>
<div class="row container-fluid">
    <table id="levelTable"
           class="table table-responsive table-striped border"
           style="font-size: 15px; width: 100% !important">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã tham chiếu</th>
                <th>Tên</th>
                <th>Mô tả</th>
                <th>Mức ưu tiên</th>
                <th>Mức điểm</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Hoạt động</th>
            </tr>
        </thead>
    </table>
</div>

@await Html.PartialAsync("LevelPartial/DetailModal")
@await Html.PartialAsync("LevelPartial/UpdateModal")
@await Html.PartialAsync("Partial/SaveConfirmModalPartial")
@await Html.PartialAsync("Partial/EditConfirmModalPartial")
@await Html.PartialAsync("Partial/EditToastPartial")

<script src="~/js/GetAllLevel.js"></script>