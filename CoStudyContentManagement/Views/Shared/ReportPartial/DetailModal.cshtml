<div class="modal fade" style="z-index: 10000000" id="detailModal" tabindex="1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="row">

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Mã tham chiếu</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_id" />
                            </div>
                        </div>

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Người báo cáo</label>
                            <div class="col-sm-6">
                                <input type="text" readonly class="form-control" id="detail_author_name" />
                                <input type="hidden" readonly class="form-control" id="detail_author_email" />
                            </div>
                            <div class="col-sm-2">
                                <a onclick="goToAuthorDetail()" class="btn btn-block btn-primary" style="color: white;">Xem <i class="fa fa-info-circle" aria-hidden="true"></i></a>
                            </div>
                        </div>

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Loại đối tượng</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_type" />
                            </div>
                        </div>

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Mã đối tượng</label>
                            <div class="col-sm-6">
                                <input type="text" readonly class="form-control" id="detail_object_id" />
                            </div>
                            <div class="col-sm-2">
                                <a onclick="goToObjectDetail()" class="btn btn-block btn-primary" style="color: white">Xem <i class="fa fa-info-circle" aria-hidden="true"></i></a>
                            </div>
                        </div>

                        <div class="form-group col-12 row">
                            <label class="col-sm-12 col-form-label infomation-label-header">Lý do báo cáo</label>
                            <div class="col-sm-12">
                                <ul id="detail_report_reason">
                                </ul>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="modal-footer" id="modal_footer">
                <button class="btn btn-outline-primary" id="btn-pre-approve">Duyệt báo cáo</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
