<div class="modal fade" style="z-index: 10000000" id="detailModal" tabindex="1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="row">

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Mã tham chiếu</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_id" />
                            </div>
                        </div>

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Tên cấp độ</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_name" />
                            </div>
                        </div>

                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Mô tả</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_description" />
                            </div>
                        </div>
                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Độ ưu tiên</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_order" />
                            </div>
                        </div>
                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Điểm</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control" id="detail_point" />
                            </div>
                        </div>
                        <div class="form-group col-12 row">
                            <label class="col-sm-4 col-form-label infomation-label-header">Trạng thái</label>
                            <div class="col-sm-8">
                                <select id="detail_status" class="form-control">
                                    <option value="true">Đang hoạt động</option>
                                    <option value="false">Đã xóa</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer" id="modal_footer">
                <button type="button" class="btn btn-secondary" id="btn-pre-save" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

